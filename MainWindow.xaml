        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoPiper"
        mc:Ignorable="d"
        Title="AutoPiper1.0" Height="400" Width="500" WindowStartupLocation="CenterScreen" MaxWidth="500" MaxHeight="400" MinHeight="400" MinWidth="250" Icon="/DevHome.png">
	<Grid>
		<TextBox Name="txtInput" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" TextWrapping="Wrap" Margin="10,10,10,50"/>
